@model BlogProject.Models.UserModel

@{
    ViewBag.Title = "Change user information";
}

@Html.ValidationSummary()

<link rel="stylesheet" href="../../Content/css/account.css">

@using (Html.BeginForm("ChangeInformation", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.EditorForModel()
    <div class="editor-label">Image</div>
    <div class="editor-field"> 
        @if (Model.ImageData == null){
       <div>Upload new image: <input type="file" name="Image" /> 
       </div>}
        else
        {
           <div>Change image: <input type="file" name="Image" />
            </div> 
        }
    </div>
    <div class="button"><input type="submit" value="Save" /></div>
}