@model BlogProject.Models.AccountModels.LogInModel
@{
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}
@{
    ViewBag.Title = "Login";
}

<link rel="stylesheet" href="../../Content/css/account.css">
<h2>Login</h2>
<p>
    Enter your user name and password. @Html.ActionLink("Sing up", "Register", "Account") if you do not have an account.
</p>
@Html.ValidationSummary()

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Username)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Username)
                @Html.ValidationMessageFor(m => m.Username)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <p>
                <div class="button"><input type="submit" value="LogIn" /></div>
            </p>
        </fieldset>
    </div>
}