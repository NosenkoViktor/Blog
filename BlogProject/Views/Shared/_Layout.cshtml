<!DOCTYPE html>
<html>
<head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Blog.@ViewBag.Title</title>
        <meta name="description" content="blog">
        <link rel="stylesheet" href="../../Content/css/normalize.css">
        <link rel="stylesheet" href="../../Content/css/main.css">
</head>
<body>
    <div class="wrap">
        <header class="header">
            <h1>BLOG<span>@Html.Partial("_LogOnPartial")</span></h1>
        </header>

        <div class="page">
        <div class="info">
            <h2>@ViewBag.Person.FirstName @ViewBag.Person.LastName</h2>
        </div>
        <div class="left-side">
            <div class="avatar">
                @if (ViewBag.Person.ImageData != null)
                {
                    <img width="165" height="200" src="@Url.Action("GetImage", "UserModel", new { Model.ID })" />
                }
                else {<img width="165" height="200" src="../../Content/images/guest_user.png" />}
            </div>
            <div class="menu">
                <ul>
                    <li @CurrentItem("RecentPosts")>@Html.ActionLink("Recent posts", "RecentPosts", "Home", new { username = ViewBag.Person.Username }, null)</li>
                    <li @CurrentItem("Arhive")>@Html.ActionLink("Arhive", "Arhive", "Home", new { username = ViewBag.Person.Username }, null)</li>
                    <li @CurrentItem("Information")>@Html.ActionLink("Information", "Information", "Home", new { username = ViewBag.Person.Username }, null)</li>
                    @helper CurrentItem(String item)
                    {
                        if (item == ViewContext.RouteData.Values["action"].ToString())
                        {
                             @:class="selected"
                        }
                    }
                </ul>
            </div>
            <div class="search">
                @Html.Partial("_SearchPartial")
            </div>
        </div>

        <div class="right-side">
            @RenderBody()
        </div>
        </div>
    </div>
    <script type="text/javascript">
        $(".menu").click(function () {
            $(this).parent.addClass("selected");
        });
    </script>
</body>
</html>


